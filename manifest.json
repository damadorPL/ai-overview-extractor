{
  "manifest_version": 2,
  "name": "AI Overview Extractor",
  "version": "1.0.0",
  "description": "Ekstraktuje treść AI Overview z Google Search do formatu Markdown",
  
  "permissions": [
    "activeTab",
    "*://www.google.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*"
      ],
      "js": ["turndown.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "web_accessible_resources": [
    "icons/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "ai-overview-extractor@rozenberger.com",
      "strict_min_version": "58.0"
    }
  },
  
  "author": "Roman Rozenberger",
  "homepage_url": "https://github.com/romek-rozen/ai-overview-extractor",
  
  "developer": {
    "name": "Roman Rozenberger",
    "url": "https://github.com/romek-rozen"
  }
}
